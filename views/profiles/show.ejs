<%- include('../partials/nav') %>

<main>
  <% if (profile.avatar) { %>
    <div>
      <img 
        class="profile-avatar"
        src="<%= profile.avatar %>" 
        alt="<%= profile.name %> avatar"
      >
    </div>
  <% } %>
  <h1>It's <%= isSelf ? "you" : profile.name %>!</h1>
    <h2>Songs Added by <%= isSelf?"you":profile.name %> </h2>
    <div id="hitz-profile">
      <% hitz.forEach(hit => { %>
        <% if(hit.owner.equals(user?.profile._id)) %> 
          <h3><%= hit.name %> makes me feel <%= hit.emotion %>  </h3>
    <%  }); %> 
    </div>
